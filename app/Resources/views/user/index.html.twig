{% extends 'base.html.twig' %}

{% block body %}
<h1>Listes des Utilisateurs</h1>

<div class="row">
    <div class="row">

        <div class="col-md-10 col-md-offset-1">

        <table class="table-bordered">
            <thead>
                <tr>
                    <th class="col-md-1">Id</th>
                    <th class="col-md-1">Age</th>
                    <th class="col-md-1">Famille</th>
                    <th class="col-md-1">Race</th>
                    <th class="col-md-1">Nourriture</th>
                    <th class="col-md-1">Amis</th>                    
                    <th class="col-md-2">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.age }}</td>
                    <td>{{ user.famille }}</td>
                    <td>{{ user.race }}</td>
                    <td>{{ user.nourriture }}</td>
                    <td>
                        <input type="checkbox" class="checkbox"
                    {% if (user.myfriends != null) %}
                    checked>
                        {% else %}
                        <input type="checkbox" class="checkbox">
                    {% endif %}
                     </td>

                    <td>
                        <a href="{{ path('user_show', { 'id': user.id }) }}" type="button" class="btn btn-default col-md-12">voir</a>
                            </li>
                            <li>
                                <a href="{{ path('user_edit', { 'id': user.id }) }}"type="button" class="btn btn-default col-md-12">éditer</a>
                            </li>
                        </ul>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    </div>
</div>
<br>
<div class="">

        <a href="{{ path('user_new') }}" type="button" class="btn btn-primary">Créer un nouvel utilisateur</a>
    </div>
{% endblock %}
